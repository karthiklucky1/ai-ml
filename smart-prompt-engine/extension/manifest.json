{
    "manifest_version": 3,
    "name": "Smart Prompt Engine",
    "version": "2.0",
    "description": "Improves prompts before sending to AI",
    "permissions": [
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "http://127.0.0.1:8000/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://chatgpt.com/*",
                "*://*.openai.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}